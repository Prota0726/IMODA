<!-- page script -->
<script>
    $(document).ready(function () {
        $("#example1").DataTable({
            "paging": true,
            "responsive": true,
            "autoWidth": false,
            "ordering": true,
            "info": true,
            "responsive": true,
        });
        $('#checkBoxAll').click(function () {
                if ($(this).is(":checked")) {
                    $(".chkCheckBoxId").prop("checked", true)
                }
                else {
                    $(".chkCheckBoxId").prop("checked", false)
                }
        });
    });
</script>