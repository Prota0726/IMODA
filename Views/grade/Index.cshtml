@model IEnumerable<IMODA.Models.member_level>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Memeber Setting Management > Grade</h1>
            </div>
        </div>
    </div>
</section>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <p>
                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">全館打折</button>
                </p>
                @Html.Action("Discount")
            </div>
        </div>
    </div> 
</section>

<section class="content">
    <div class="row">
        <div class="col-12">

             @*/.card*@ 

            <div class="card">
                @*<div class="card-header">*@
                @*<h3 class="card-title">DataTable with default features</h3>*@
                @*</div>*@
                @*/.card-header*@
                <div class="card-body">
                    @using (Html.BeginForm("Index", "grade", FormMethod.Post))
                    {
                        <button type="submit" value="Delete" class="btn btn-sm btn-danger rounded-0" onclick="return confirm('Are you sure?')"><i class="fa fa-trash-o"></i> Delete</button>
                        <br /><br />
                        <table style="text-align:center;" id="example1" class="display">
                            <thead>
                                <tr>

                                    <th>@Html.DisplayNameFor(model => model.name_)</th>
                                    <th>@Html.DisplayNameFor(model => model.sum_)</th>
                                    <th>@Html.DisplayNameFor(model => model.discount)</th>
                                    <th>@Html.DisplayNameFor(model => model.icoin)</th>
                                    <th>@Html.DisplayNameFor(model => model.end_day)</th>
                                    <th>@Html.DisplayNameFor(model => model.shopping_gold)</th>
                                    <th>@Html.DisplayNameFor(model => model.remark)</th>
                                    <th>update</th>
                                    @*<th>
                                select all <input type="checkbox" id="checkBoxAll" class="custom-checkbox" />
                            </th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name_)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.sum_)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.discount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.icoin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.end_day)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.shopping_gold)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.remark)
                                        </td>
                                        <td>
                                            @*<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal2">Update</button>*@
                                            @Html.ActionLink( "update","Update", new { id = item.id })
                                        </td>
                                        @*<td>
                                            <input type="checkbox" name="ID" value="@item.id" class="custom-checkbox chkCheckBoxId" />
                                        </td>*@
                                    </tr>
                                }

                            </tbody>
                            @*<tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.name)</th>
                            <th>modify</th>
                        </tr>
                    </tfoot>*@
                        </table>
                    }
                </div>
                @*/.card-body*@
            </div>
             @*/.card*@ 
        </div>
         @*/.col*@ 
    </div>
     @*/.row*@ 
</section>

