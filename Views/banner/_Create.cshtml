@model IMODA.Models.banner
@{
    ViewBag.Title = "Create";
}
<style>
    .modal-header-primary {
        color: #fff;
        padding: 9px 15px;
        border-bottom: 1px solid #eee;
        background-color: #428bca;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .modal-footer-primary {
        color: #fff;
        padding: 9px 15px;
        border-top: 1px solid #eee;
        background-color: #428bca;
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
    }
</style>
<!-- Modal -->
@using (Html.BeginForm("_Create", "banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header modal-header-primary">
                    <h4 class="modal-title">Banner 新增</h4>
                    <button type="button" class="close" aria-label="Close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.c_id, new { @Value = "1" })
                        @Html.HiddenFor(model => model.u_id, new { @Value = "1" })
                        @Html.HiddenFor(model => model.c_time, new { @Value = DateTime.Now })
                        @Html.HiddenFor(model => model.u_time, new { @Value = DateTime.Now })

                        <div class="form-group">
                            @Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        

                        <div class="form-group">
                            @Html.LabelFor(model => model.banner_switch, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.banner_switch)
                                    @Html.ValidationMessageFor(model => model.banner_switch, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.sort, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.sort)
                                    @Html.ValidationMessageFor(model => model.sort, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.banner_top, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.banner_top)
                                    @Html.ValidationMessageFor(model => model.banner_top, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.banner1, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.banner1)
                                    @Html.ValidationMessageFor(model => model.banner1, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.center, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.center)
                                    @Html.ValidationMessageFor(model => model.center, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.under, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.under)
                                    @Html.ValidationMessageFor(model => model.under, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.img, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <input type="file" name="file" /><br />
                                    @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.url, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.url)
                                    @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.action, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.action)
                                    @Html.ValidationMessageFor(model => model.action, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.remark)
                                    @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modal-footer-primary">
                    <button type="submit" class="btn btn-default">Create</button>
                </div>
            </div>
        </div>
    </div>
}